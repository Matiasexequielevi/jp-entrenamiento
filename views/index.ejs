<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>JP Entrenamiento Personalizado</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="text-primary">üèãÔ∏è‚Äç‚ôÇÔ∏è JP Entrenamiento Personalizado</h2>
      <a href="/nueva" class="btn btn-success">+ Nuevo Cliente</a>
    </div>

    <div class="mb-3 text-end">
      <input type="text" id="buscador" class="form-control w-50 ms-auto" placeholder="Buscar por nombre o apellido...">
    </div>

    <% if (clientes.length === 0) { %>
      <p class="text-muted text-center">No hay clientes registrados a√∫n.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center" id="tablaClientes">
          <thead class="table-dark">
            <tr>
              <th>Nombre</th>
              <th>Edad</th>
              <th>Celular</th>
              <th>Plan</th>
              <th>Inicio</th>
              <th>Pago</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% clientes.forEach(cliente => { %>
              <tr>
                <td><%= cliente.nombre %> <%= cliente.apellido %></td>
                <td><%= cliente.edad %></td>
                <td><%= cliente.celular %></td>
                <td><%= cliente.plan %></td>
                <td><%= cliente.fechaInicio.toLocaleDateString() %></td>
                <td><%= cliente.fechaPago.toLocaleDateString() %></td>
                <td>
                  <a href="/editar/<%= cliente._id %>" class="btn btn-sm btn-primary">Editar</a>
                  <form action="/eliminar/<%= cliente._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¬øEliminar cliente?')">Eliminar</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <script>
    const buscador = document.getElementById('buscador');
    const filas = document.querySelectorAll('#tablaClientes tbody tr');

    buscador.addEventListener('input', () => {
      const texto = buscador.value.toLowerCase();
      filas.forEach(fila => {
        const nombre = fila.children[0].textContent.toLowerCase();
        fila.style.display = nombre.includes(texto) ? '' : 'none';
      });
    });
  </script>
</body>
</html>
