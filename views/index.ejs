<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>JP Entrenamiento Personalizado</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">

  <div class="container mt-4">
    <div class="text-center mb-4">
      <img src="/images/logo-jp.png" alt="Logo JP" class="rounded-circle shadow" style="width: 120px; height: 120px; object-fit: cover;">
      <h2 class="mt-3 fw-bold text-primary">JP Entrenamiento Personalizado</h2>
    </div>

    <div class="row mb-4 align-items-center">
      <div class="col-md-6">
        <a href="/nueva" class="btn btn-success shadow-sm">
          <i class="bi bi-person-plus"></i> + Nuevo Cliente
        </a>
      </div>
      <div class="col-md-6 text-end">
        <input type="text" id="buscador" class="form-control w-75 d-inline" placeholder="Buscar por nombre o apellido...">
      </div>
    </div>

    <% if (clientes.length === 0) { %>
      <p class="text-muted text-center">No hay clientes registrados aún.</p>
    <% } else { %>
      <div class="row text-center mb-4">
  <div class="col-md-3 mb-2">
    <div class="card shadow-sm border-start border-4 border-primary">
      <div class="card-body">
        <h6 class="text-muted">Total Clientes</h6>
        <h4 class="text-dark"><%= resumen.totalClientes %></h4>
      </div>
    </div>
  </div>
  <div class="col-md-3 mb-2">
    <div class="card shadow-sm border-start border-4 border-success">
      <div class="card-body">
        <h6 class="text-muted">Al Día</h6>
        <h4 class="text-success"><%= resumen.alDia %></h4>
      </div>
    </div>
  </div>
  <div class="col-md-3 mb-2">
    <div class="card shadow-sm border-start border-4 border-danger">
      <div class="card-body">
        <h6 class="text-muted">Vencidos</h6>
        <h4 class="text-danger"><%= resumen.vencidos %></h4>
      </div>
    </div>
  </div>
  <div class="col-md-3 mb-2">
    <div class="card shadow-sm border-start border-4 border-info">
      <div class="card-body">
        <h6 class="text-muted">Total Ingresos</h6>
        <h4 class="text-dark">$<%= resumen.totalRecaudado.toFixed(2) %></h4>
      </div>
    </div>
  </div>
</div>

      <div class="table-responsive">
        <table class="table table-bordered table-hover text-center align-middle shadow-sm" id="tablaClientes">
          <thead class="table-dark">
            <tr>
              <th>Nombre</th>
              <th>Edad</th>
              <th>Celular</th>
              <th>Plan</th>
              <th>Inicio</th>
              <th>Pago</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% clientes.forEach(cliente => { %>
              <tr>
                <td><%= cliente.nombre %> <%= cliente.apellido %></td>
                <td><%= cliente.edad %></td>
                <td><%= cliente.celular %></td>
                <td><%= cliente.plan %></td>
                <td><%= cliente.fechaInicio.toLocaleDateString() %></td>
                <td><%= cliente.fechaPago.toLocaleDateString() %></td>
                <td>
                  <a href="/editar/<%= cliente._id %>" class="btn btn-sm btn-primary me-1">Editar</a>
                  <form action="/eliminar/<%= cliente._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar cliente?')">Eliminar</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap Icons (opcional) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <script>
    const buscador = document.getElementById('buscador');
    const filas = document.querySelectorAll('#tablaClientes tbody tr');

    buscador.addEventListener('input', () => {
      const texto = buscador.value.toLowerCase();
      filas.forEach(fila => {
        const nombre = fila.children[0].textContent.toLowerCase();
        fila.style.display = nombre.includes(texto) ? '' : 'none';
      });
    });
  </script>
</body>
</html>
