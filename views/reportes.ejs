<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Reporte de Ingresos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Estilos -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }

    header {
      background-color: #b2bcdd;
      padding: 1rem 0;
      text-align: center;
      color: rgb(48, 45, 45);
    }

    header img {
      width: 80px;
      border-radius: 50%;
      margin-bottom: 0.5rem;
    }

    .resumen-total {
      font-size: 1.3rem;
    }

    .footer {
      background-color: #b2bcdd;
      color: rgb(48, 45, 45);
      text-align: center;
      padding: 0.8rem 0;
      margin-top: 3rem;
    }

    #rangoFechas {
      max-width: 300px;
      margin: 0 auto;
      border: 2px solid #0d6efd;
      border-radius: 8px;
      padding: 8px 16px;
      font-weight: bold;
      color: #0d6efd;
      text-align: center;
    }
  </style>
</head>
<body>

  <!-- HEADER -->
  <header>
    <img src="/images/logo-jp.png" alt="Logo JP">
    <h2 class="fw-bold">JP Entrenamiento Personalizado</h2>
  </header>

  <div class="container py-4">

    <!-- VOLVER + T√çTULO -->
    <div class="text-center mb-4">
      <a href="/" class="btn btn-outline-dark mb-3">‚Üê Volver al Inicio</a>
      <h3 class="fw-bold text-primary">üìä Reporte de Ingresos</h3>
    </div>

    <!-- FILTRO -->
    <div class="row justify-content-center mb-4">
      <div class="col-auto">
        <input type="text" id="rangoFechas" class="form-control" placeholder="Seleccionar rango de fechas">
      </div>
    </div>

    <!-- TOTAL -->
    <div class="text-center mb-4">
      <h5 class="resumen-total">
        Total Ingresos: <span class="text-success">$<span id="totalFiltro"><%= total.toFixed(2) %></span></span>
      </h5>
    </div>

    <!-- TABLA -->
    <div class="table-responsive">
      <table class="table table-bordered text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Monto</th>
          </tr>
        </thead>
        <tbody id="tablaPagos">
          <% pagos.forEach(pago => { %>
            <tr>
              <td><%= pago.nombre %></td>
              <td><%= pago.fecha.toLocaleDateString() %></td>
              <td>$<%= pago.monto.toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- FOOTER -->
  <div class="footer">
    Todos los derechos reservados - Levi Prog.
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

  <script>
    $(function () {
      $('#rangoFechas').daterangepicker({
        startDate: moment('<%= desde %>'),
        endDate: moment('<%= hasta %>'),
        locale: {
          format: 'YYYY-MM-DD',
          separator: ' al ',
          applyLabel: 'Aplicar',
          cancelLabel: 'Cancelar',
          fromLabel: 'Desde',
          toLabel: 'Hasta',
          customRangeLabel: 'Personalizado',
          weekLabel: 'S',
          daysOfWeek: ['Do','Lu','Ma','Mi','Ju','Vi','Sa'],
          monthNames: ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'],
          firstDay: 1
        }
      }, function(start, end) {
        const desde = start.format('YYYY-MM-DD');
        const hasta = end.format('YYYY-MM-DD');
        window.location.href = `/reportes?desde=${desde}&hasta=${hasta}`;
      });
    });
  </script>

</body>
</html>
