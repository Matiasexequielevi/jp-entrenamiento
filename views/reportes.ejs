<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Reporte de Ingresos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }

    header {
      background-color: #b2bcdd;
      padding: 1rem 0;
      text-align: center;
      color: rgb(48, 45, 45);
    }

    header img {
      width: 80px;
      border-radius: 50%;
      margin-bottom: 0.5rem;
    }

    .resumen-total {
      font-size: 1.3rem;
    }

    .footer {
      background-color: #b2bcdd;
      color: rgb(48, 45, 45);
      text-align: center;
      padding: 0.8rem 0;
      margin-top: 3rem;
    }

    .filtro-select {
      max-width: 220px;
    }
  </style>
</head>
<body>

  <!-- HEADER -->
  <header>
    <img src="/images/logo-jp.png" alt="Logo JP">
    <h2 class="fw-bold">JP Entrenamiento Personalizado</h2>
  </header>

  <div class="container py-4">

    <!-- VOLVER + T√çTULO -->
    <div class="text-center mb-4">
      <a href="/" class="btn btn-outline-dark mb-3">‚Üê Volver al Inicio</a>
      <h3 class="fw-bold text-primary">üìä Reporte de Ingresos</h3>
    </div>

    <!-- FILTRO -->
    <div class="row justify-content-center mb-4">
      <div class="col-auto">
        <select id="filtro" class="form-select filtro-select">
          <option value="hoy">Hoy</option>
          <option value="semana">Esta Semana</option>
          <option value="mes">Este Mes</option>
          <option value="anio">Este A√±o</option>
        </select>
      </div>
    </div>

    <!-- TOTAL -->
    <div class="text-center mb-4">
      <h5 class="resumen-total">
        Total Ingresos <span id="tituloFiltro"><%= filtro.charAt(0).toUpperCase() + filtro.slice(1) %></span>: 
        <span class="text-success">$<span id="totalFiltro"><%= total.toFixed(2) %></span></span>
      </h5>
    </div>

    <!-- TABLA -->
    <div class="table-responsive">
      <table class="table table-bordered text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Monto</th>
          </tr>
        </thead>
        <tbody id="tablaPagos">
          <% pagos.forEach(pago => { %>
            <tr data-fecha="<%= pago.fecha.toISOString() %>">
              <td><%= pago.nombre %></td>
              <td><%= pago.fecha.toLocaleDateString() %></td>
              <td>$<%= pago.monto.toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- FOOTER -->
  <div class="footer">
    Todos los derechos reservados - Levi Prog.
  </div>

  <!-- SCRIPT FILTRO -->
  <script>
    const filtro = document.getElementById('filtro');
    const tabla = document.getElementById('tablaPagos');
    const total = document.getElementById('totalFiltro');
    const titulo = document.getElementById('tituloFiltro');

    filtro.addEventListener('change', () => {
      const filas = tabla.querySelectorAll('tr');
      const ahora = new Date();
      let totalMonto = 0;

      filas.forEach(fila => {
        const fechaStr = fila.getAttribute('data-fecha');
        const fecha = new Date(fechaStr);
        let mostrar = false;

        switch (filtro.value) {
          case 'hoy':
            mostrar = fecha.toDateString() === ahora.toDateString();
            titulo.textContent = 'Hoy';
            break;
          case 'semana': {
            const inicioSemana = new Date(ahora);
            inicioSemana.setDate(ahora.getDate() - ahora.getDay());
            mostrar = fecha >= inicioSemana;
            titulo.textContent = 'Esta Semana';
            break;
          }
          case 'mes':
            mostrar = fecha.getMonth() === ahora.getMonth() && fecha.getFullYear() === ahora.getFullYear();
            titulo.textContent = 'Este Mes';
            break;
          case 'anio':
            mostrar = fecha.getFullYear() === ahora.getFullYear();
            titulo.textContent = 'Este A√±o';
            break;
        }

        if (mostrar) {
          fila.style.display = '';
          totalMonto += parseFloat(fila.children[2].textContent.replace('$', ''));
        } else {
          fila.style.display = 'none';
        }
      });

      total.textContent = totalMonto.toFixed(2);
    });
  </script>
</body>
</html>
