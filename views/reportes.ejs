<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reportes de Ingresos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .filtro-select { max-width: 200px; }
  </style>
</head>
<body class="bg-light">
  <div class="container py-4">
    <div class="text-center mb-4">
      <a href="/" class="btn btn-outline-secondary mb-3">‚Üê Volver</a>
      <h2 class="fw-bold text-primary">üìä Reporte de Ingresos</h2>
    </div>

    <div class="row justify-content-center mb-4">
      <div class="col-auto">
        <select id="filtro" class="form-select filtro-select">
          <option value="hoy">Hoy</option>
          <option value="semana">Esta Semana</option>
          <option value="mes">Este Mes</option>
          <option value="anio">Este A√±o</option>
        </select>
      </div>
    </div>

    <div class="text-center mb-4">
      <h4>Total Ingresos <span id="tituloFiltro">Hoy</span>: <span class="text-success">$<span id="totalFiltro"><%= totalHoy.toFixed(2) %></span></span></h4>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Monto</th>
          </tr>
        </thead>
        <tbody id="tablaPagos">
          <% clientes.forEach(cliente => { %>
            <% cliente.pagos.forEach(pago => { %>
              <tr data-fecha="<%= new Date(pago.fecha).toISOString() %>">
                <td><%= cliente.nombre %> <%= cliente.apellido %></td>
                <td><%= new Date(pago.fecha).toLocaleDateString() %></td>
                <td>$<%= pago.monto.toFixed(2) %></td>
              </tr>
            <% }) %>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    const filtro = document.getElementById('filtro');
    const tabla = document.getElementById('tablaPagos');
    const total = document.getElementById('totalFiltro');
    const titulo = document.getElementById('tituloFiltro');

    filtro.addEventListener('change', () => {
      const filas = tabla.querySelectorAll('tr');
      const ahora = new Date();
      let totalMonto = 0;

      filas.forEach(fila => {
        const fechaStr = fila.getAttribute('data-fecha');
        const fecha = new Date(fechaStr);
        let mostrar = false;

        switch (filtro.value) {
          case 'hoy':
            mostrar = fecha.toDateString() === ahora.toDateString();
            titulo.textContent = 'Hoy';
            break;
          case 'semana': {
            const inicioSemana = new Date(ahora);
            inicioSemana.setDate(ahora.getDate() - ahora.getDay());
            mostrar = fecha >= inicioSemana;
            titulo.textContent = 'Esta Semana';
            break;
          }
          case 'mes':
            mostrar = fecha.getMonth() === ahora.getMonth() && fecha.getFullYear() === ahora.getFullYear();
            titulo.textContent = 'Este Mes';
            break;
          case 'anio':
            mostrar = fecha.getFullYear() === ahora.getFullYear();
            titulo.textContent = 'Este A√±o';
            break;
        }

        if (mostrar) {
          fila.style.display = '';
          totalMonto += parseFloat(fila.children[2].textContent.replace('$', ''));
        } else {
          fila.style.display = 'none';
        }
      });

      total.textContent = totalMonto.toFixed(2);
    });
  </script>
</body>
</html>
