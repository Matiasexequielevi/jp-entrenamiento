<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Reporte de Ingresos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
  <style>
    body { background: #f8f9fa; font-family: 'Segoe UI', sans-serif; }
    header { background-color: #b2bcdd; padding: 1rem; text-align: center; }
    header img { width: 80px; border-radius: 50%; margin-bottom: 0.5rem; }
    .resumen-total { font-size: 1.3rem; }
    .footer { background-color: #b2bcdd; color: #302d2d; text-align: center; padding: 0.8rem 0; margin-top: 3rem; }
    #rangoFechas { max-width: 300px; margin: 0 auto; border: 2px solid #0d6efd; border-radius: 8px; padding: 8px 16px; font-weight: bold; color: #0d6efd; text-align: center; }
  </style>
</head>
<body>
  <header>
    <img src="/images/logo-jp.png" alt="Logo JP">
    <h2 class="fw-bold">JP Entrenamiento Personalizado</h2>
  </header>
  <div class="container py-4">
    <div class="text-center mb-4">
      <a href="/" class="btn btn-outline-dark mb-3">&larr; Volver al Inicio</a>
      <h3 class="fw-bold text-primary">ðŸ“Š Reporte de Ingresos</h3>
    </div>
    <div class="row justify-content-center mb-4">
      <div class="col-auto">
        <input type="text" id="rangoFechas" class="form-control" placeholder="Seleccionar rango de fechas">
      </div>
    </div>
    <div class="text-center mb-4">
      <h5 class="resumen-total">
        Total Ingresos: <span class="text-success">$<span id="totalFiltro"><%= total.toFixed(2) %></span></span>
      </h5>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Monto</th>
          </tr>
        </thead>
        <tbody id="tablaPagos">
          <% pagos.forEach(pago => { %>
            <tr data-fecha="<%= pago.fecha.toISOString() %>">
              <td><%= pago.nombre %></td>
              <td><%= pago.fecha.toLocaleDateString() %></td>
              <td>$<%= pago.monto.toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="footer">
    Todos los derechos reservados - Levi Prog.
  </div>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
  <script>
    $(function () {
      const total = document.getElementById('totalFiltro');
      function filtrarTabla(start, end) {
        let totalMonto = 0;
        $('#tablaPagos tr').each(function () {
          const fechaStr = $(this).data('fecha');
          if (!fechaStr) return;
          const fecha = new Date(fechaStr);
          if (fecha >= start.toDate() && fecha <= end.toDate()) {
            $(this).show();
            totalMonto += parseFloat($(this).find('td:eq(2)').text().replace('$',''));
          } else {
            $(this).hide();
          }
        });
        total.textContent = totalMonto.toFixed(2);
      }
      $('#rangoFechas').daterangepicker({
        startDate: moment("<%= desde %>"),
        endDate: moment("<%= hasta %>"),
        locale: {
          format: 'YYYY-MM-DD', separator: ' al ', applyLabel: 'Aplicar', cancelLabel: 'Cancelar',
          fromLabel: 'Desde', toLabel: 'Hasta', customRangeLabel: 'Personalizado',
          daysOfWeek: ['Do','Lu','Ma','Mi','Ju','Vi','Sa'],
          monthNames: ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'],
          firstDay: 1
        }
      }, filtrarTabla);
      const picker = $('#rangoFechas').data('daterangepicker');
      filtrarTabla(picker.startDate, picker.endDate);
    });
  </script>
</body>
</html>
